<h2>Request Blood</h2>
<form method="POST" action="/hospital/requestForm">
  <div class="mb-3">
    <label>Blood Type</label>
    <select name="blood_type" class="form-select" required>
      <option>A+</option><option>A-</option><option>B+</option><option>B-</option>
      <option>AB+</option><option>AB-</option><option>O+</option><option>O-</option>
    </select>
  </div>

  <div class="mb-3">
    <label>Quantity (units)</label>
    <input type="number" name="quantity" class="form-control" required min="1">
  </div>

  <div class="mb-3">
    <label>Patient Status</label>
    <select name="patient_status" class="form-select" required>
      <option>Immediate</option>
      <option>Urgent</option>
      <option>Normal</option>
    </select>
  </div>

  <div class="mb-3">
    <label>City</label>
<!-- Disabled dropdown for display -->
<select disabled>
  <option selected><%= hospital.City.name %></option>
</select>

<!-- Hidden input to actually submit the city_id -->
<input type="hidden" name="city_id" value="<%= hospital.City.id %>">
  </div>

  <button type="submit" class="btn btn-primary">Submit Request</button>
</form>

